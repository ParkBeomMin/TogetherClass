<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@drawable/mainback</item>
        <item name="colorPrimary">@color/Black</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/Black</item>
        <item name="alertDialogTheme">@style/MyDialog</item>
        <!--<item name="buttonBarButtonStyle">@style/buttonBarButtonStyle</item>-->
    </style>

    <style name="NoTitle01" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/Black</item>
        <item name="colorAccent">@color/Black</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:inflatedId">@id/action_bar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/Black</item>
        <item name="colorAccent">@color/Black</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#9c9797</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.TextView.SpinnerItem." parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem.">
    <item name="android:textColor">@color/Black</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.TextView." parent="TextAppearance.AppCompat.Widget.TextView.">
        <item name="android:textColor">@color/Black</item>
    </style>
</resources>
