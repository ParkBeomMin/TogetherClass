<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.park.togetherclass.MeetingActivity">

    <HorizontalScrollView
        android:id="@+id/scrollView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawHorizontalTrack="true">
            <ImageView />

            <Button
                android:id="@+id/GClassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="수업시간" />

            <Button
                android:id="@+id/GFreebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="자유게시판" />

            <Button
                android:id="@+id/GNoticebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="과목 공지" />

            <Button
                android:id="@+id/GMeetbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="교수현황" />

            <Button
                android:id="@+id/GPotalbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="포탈" />

            <Button
                android:id="@+id/GHomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:onClick="MyOnClick"
                android:text="스케쥴" />
        </GridLayout>
    </HorizontalScrollView>

    <GridView
        android:numColumns="2"
        android:id="@+id/meetingList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>

</LinearLayout>
